# Database
DATABASE_URL=your_database_url_here

# Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
JWT_SECRET=your_jwt_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Resend Configuration
RESEND_API_KEY=re_your_real_api_key_here
RESEND_FROM_EMAIL=noreply@adlab.guru
RESEND_FROM_NAME=Ad Lab
SEND_REAL_EMAILS=false  # Set to 'true' to send real emails, 'false' to log to file

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=1  # Token lifetime in hours (default: 1 hour for security)

# Development
NODE_ENV=development